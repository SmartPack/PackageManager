<resources>
    <style name="AppTheme" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textDirection">locale</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.Title" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Divider" >
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>